{
  "name": "@xiaofandegeng/rmemo",
  "version": "1.9.0",
  "description": "Repo memory + dev journal CLI: scan any project, persist conventions/progress, and generate an AI-ready context pack.",
  "type": "module",
  "bin": {
    "rmemo": "bin/rmemo.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/xiaofandegeng/rmemo.git"
  },
  "bugs": {
    "url": "https://github.com/xiaofandegeng/rmemo/issues"
  },
  "homepage": "https://github.com/xiaofandegeng/rmemo#readme",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "test": "node --test",
    "pack:dry": "npm_config_cache=.npm-cache npm pack --dry-run",
    "verify:changelog": "node scripts/changelog-lint.js --format md",
    "verify:matrix": "node scripts/regression-matrix.js --format md",
    "verify:release-health": "node scripts/release-health.js --format md",
    "verify:release-ready": "node scripts/release-ready.js --format md",
    "verify:release-rehearsal": "node scripts/release-rehearsal.js --format md",
    "verify:release-rehearsal-archive": "node scripts/release-rehearsal.js --format md --archive",
    "verify:release-rehearsal-archive-verify": "node scripts/release-rehearsal.js --format md --archive --archive-verify --archive-require-files release-ready.json,release-health.json,release-rehearsal.json",
    "verify:release-archive": "node scripts/release-archive.js --format md",
    "verify:release-archive-find": "node scripts/release-archive-find.js --format md",
    "verify:release-verify": "node scripts/release-verify.js --format md",
    "release:notes": "node scripts/release-notes.js"
  },
  "files": [
    "bin/",
    "src/",
    "test/",
    "templates/",
    "profiles/",
    "README.md",
    "README.zh-CN.md",
    "LICENSE",
    "DEVELOPMENT_PLAN.md",
    "CHANGELOG.md",
    "CONTRIBUTING.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "ai",
    "developer-tools",
    "cli",
    "context",
    "journal",
    "knowledge-base"
  ]
}
